<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pokeInfo="clr-namespace:pokeInfo"
       x:Class="pokeInfo.MainPage"
       TabBarBackgroundColor="#FF1C1C"
       NavBarIsVisible="False"
       >

    <TabBar  x:Name="main_tab_bar" TabIndex="1" FlyoutDisplayOptions="AsSingleItem" FlyoutItemIsVisible="True">
        <ShellContent x:Name="main_tab_bar_list" Title="List" Icon="globeNav.png" >
            <pokeInfo:PokemonListPage/>
        </ShellContent>

        <ShellContent x:Name="main_tab_bar_home" Title="Home" Icon="pokeBall.png" >
            <pokeInfo:HomePage/>
        </ShellContent>

        <ShellContent x:Name="main_tab_bar_add" Title="Add" Icon="plusNav.png" >
            <pokeInfo:AddPokemonePage/>
        </ShellContent>
    </TabBar>

</Shell>


